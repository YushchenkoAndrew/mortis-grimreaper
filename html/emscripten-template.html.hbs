<html>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta http-equiv='Content-Type' content='text/html; charset=utf-8' />

    <style>
      html, body { width: 100%; height: 100%; } body { font-family: arial;
      margin: 0; padding: 0; background: #000; } .emscripten { padding-right: 0;
      margin-left: auto; margin-right: auto; display: block; }
      div.emscripten_border { border: none; } canvas.emscripten { border: 0px
      none; background-color: black; }
    </style>

    <title>{{title}}</title>
  </head>
  <body>
    <canvas
      class='emscripten'
      id='canvas'
      oncontextmenu='event.preventDefault()'
      tabindex='-1'
    ></canvas>

    <script src='{{web}}/js/lib/emscripten.js'></script>

    {{#each scripts}}
      <script src='{{this}}'></script>
    {{/each}}

  </body>
</html>